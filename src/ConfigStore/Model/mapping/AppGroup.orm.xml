<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ConfigStore\Model\AppGroup" table="config_app_group">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" column="name" length="255" nullable="false" />

        <one-to-one field="reference" target-entity="ConfigStore\Model\App">
            <join-column name="reference_id" nullable="true" />
        </one-to-one>

        <one-to-many target-entity="ConfigStore\Model\App" mapped-by="group" field="apps" />
    </entity>
</doctrine-mapping>
